<%= form_with(model: @post, local: true) do |f| %>
  <%# <%= render 'shared/error_messages', model: f.object %> 
    <div class="field">
      <%= f.label :text, "タイトル" %><br/>
      <%= f.text_field :text %>
    </div>
    
    <div class="field">
      <%= f.label :content, "募集内容" %><br />
      <%= f.text_area :content, class: :form__text %>
    </div>

    <div class="field">
      <%= f.label :party_time, "時間" %><br/>
      <%= f.text_field :party_time %>
    </div>

    <div class="actions">
      <%= f.submit "募集する", class: :form__btn %>
    </div>
<% end %>
